<div class="home">
    <h1>Cadastro de Condômino</h1>
    <div class="authcontainer">
        <form action="/registrar" method="post">
            <div class="formulario">
                <label for="cpf">Digite o CPF do usuário: </label>
                <input type="text" name="cpf" placeholder="digite o CPF do condômino">
            </div>
            <div class="formulario">
                <label for="nome">Digite o nome do condômino: </label>
                <input type="text" name="nome" placeholder="digite o nome do condômino">
            </div>
            <div class="formulario">
                <label for="apartamento">Apartamento: </label>
                <select name="apartamento">
                    <option value="101">101</option>
                    <option value="102">102</option>
                    <option value="103">103</option>
                    <option value="104">104</option>
                    <option value="201">201</option>
                    <option value="202">202</option>
                    <option value="203">203</option>
                    <option value="204">204</option>
                    <option value="301">301</option>
                    <option value="302">302</option>
                    <option value="303">303</option>
                    <option value="304">304</option>
                    <option value="401">401</option>
                    <option value="402">402</option>
                    <option value="403">403</option>
                    <option value="404">404</option>
                </select>
                <label for="bloco">Selecione o Bloco: </label>
                <select name="bloco">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                    <option value="G">G</option>
                    <option value="H">H</option>
                    <option value="I">I</option>
                    <option value="J">J</option>
                    <option value="K">K</option>
                    <option value="L">L</option>  
                </select>
            </div>
            <div class="formulario">
                <label for="senha">Digite a senha do usuário: </label>
                <input type="password" name="senha" placeholder="digite senha do usuário">
            </div>
            <div class="formulario">
                <label for="senha">Confirmar a senha do usuário: </label>
                <input type="password" name="confirmsenha" placeholder="digite novamente a senha do usuário">
            </div>
            <div class="formulario">
                <button type="submit">Cadastrar</button>
            </div>
        </form>
    </div>
</div>