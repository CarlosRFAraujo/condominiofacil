<div class="home">
    <h1>Criar nova mensagem no mural</h1>    
    <div class="authcontainer">
        <form action="/mural/editamural" method="post">
            <input type="hidden" name="id" value="{{mural.id}}">
            <div class="formulario">
                <label for="titulo">Insira o título do aviso/circular: </label>
                <input type="text" name="titulo" value="{{mural.titulo}}">
            </div>
            <div class="formulario">
                <label for="texto">Digite a mensagem da circular: </label>
                <textarea name="texto" rows="14">{{mural.texto}}</textarea>
            </div>
            <div class="formulario">
                <label for="cpf">Digite o CPF do responsável pelo aviso: </label>
                <input type="texto" name="cpf" value="{{mural.cpf}}">
            </div>
            <div class="formulario">
                <label for="nome">Digite o nome do responsável: </label>
                <input type="texto" name="nome" value="{{mural.nome}}">
            </div>
            <div class="formulario">
                <button type="submit">Salvar</button>
            </div>
        </form>
    </div>
</div>