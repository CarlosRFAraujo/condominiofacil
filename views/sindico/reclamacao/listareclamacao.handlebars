<div class="home">
    <h1>Portal da administração do condomínio</h1>
    <div class="lista">
        {{#each reclamacoes}}
            <h2>{{this.tipo}}</h2>
            <p>{{this.descriacao}}</p>
            <p>Ass: <span>{{this.apartamento}}</span></p>
            <div class="div-btn">
                    <a href="/mural/editaMural/{{this.id}}" class="btn-pensamento">Editar</a>
                    <form action="/mural/remover" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit">Excluir</button>
                    </form>
                </div>
        {{/each}}
        </div>
    </div>
</div>